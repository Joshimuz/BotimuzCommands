<commands version="1">
	<command>
		<name>What car</name>
		<requiredwords>
			<group>
				<word wholeword="true">bot</word>
				<word>botimuz</word>
				<word wholeword="true">what</word>
			</group>
			<group>
				<word wholeword="true">car</word>
			</group>
		</requiredwords>
		<responses>
			<response>PROLaps are driving the Aston Martin GT4.</response>
		</responses>
	</command>

	<command>
		<name>24h Schedule Link</name>
		<maxWords>10</maxWords>
		<requiredwords>
			<group>
				<word wholeword="true">bot</word>
				<word>botimuz</word>
				<word>when</word>
				<word wholeword="true">how</word>
				<word wholeword="true">who</word>
				<word>is the</word>
			</group>
			<group>
				<word>josh</word>
				<word>karl</word>
				<word>Eugene</word>
				<word wholeword="true">he</word>
				<word>stint</word>
				<word>plan</word>
				<word>hour</word>
				<word>schedule</word>
			</group>
			<group>
				<word>driv</word>
				<word>turn</word>
				<word>stint</word>
				<word>doing</word>
				<word>race</word>
				<word>racing</word>
				<word>schedule</word>
			</group>
		</requiredwords>
		<responses>
			<response>Times are in UTC/GMT (which is different to BST) and are probably wrong: prolaps.joshimuz.com</response>
		</responses>
	</command>

	<command>
		<name>What classes</name>
		<requiredwords>
			<group>
				<word wholeword="true">bot</word>
				<word>botimuz</word>
				<word wholeword="true">what</word>
			</group>
			<group>
				<word>class</word>
				<word>colour</word>
			</group>
		</requiredwords>
		<unwantedwords>
			<group>
				<word>flag</word>
			</group>
		</unwantedwords>
		<responses>
			<!-- <response>From fastest to slowest the classes are: 🟡 GTP/LMDH/LMP1 | 🔵 LMP2| 🔴 GT3</response> -->
			<response>From fastest to slowest the classes are: 🟡 GT3 | 🔵 Porsche Cup | 🔴 GT4 | 🟣 TCR | 🟢 GR86</response>
		</responses>
	</command>

